{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:types": {
      "outputs": ["dist/**/*.d.ts"]
    },
    "build:js-css": {
      "outputs": ["dist/**/*.{js,css}"]
    },
    "tsc:es6": {
      "outputs": ["dist/**/*.d.ts"]
    },
    "tsc:cjs": {
      "outputs": ["dist/cjs/**/*.d.ts"]
    },
    "swc:es6": {
      "outputs": ["dist/**/*.js"]
    },
    "swc:cjs": {
      "outputs": ["dist/cjs/**/*.js"]
    },
    "postcss": {
      "outputs": ["dist/**/*.css"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "css:types:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
